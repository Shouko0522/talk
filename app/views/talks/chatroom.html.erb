<body>
  <h1><%= @chatroom.name %></h1>
    <p>type anythind</p>
    <div class="row">
      <% @chatroom.messages.each do |element| %>
        <div class="col-4"><%= element.created_at %></div>
        <div class="col-8"><%= element.comment %></div>
      <% end %>
    </div>
      <%= form_for(@message, url: new_message_path) do |f| %>
        <%= f.label :comment  %>
        <%= f.text_field :comment %>

        <%= f.submit %>
      <% end %>
</body>
